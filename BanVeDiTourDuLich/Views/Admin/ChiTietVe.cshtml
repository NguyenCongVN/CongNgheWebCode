@model BanVeDiTourDuLich.ViewModels.ThongTinHoaDon
@{
    ViewBag.Title = "ChiTietVe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Thông tin vé</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thông tin vé</li>
                    </ol>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Main content -->
                    <div class="invoice p-3 mb-3">
                        <!-- title row -->
                        <div class="row">
                            <div class="col-12">
                                <h4>
                                    <i class="fas fa-globe"></i> Vacation, Inc.
                                    <small class="float-right">Thời gian: 2/10/2014</small>
                                </h4>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- info row -->
                        <div class="row invoice-info">
                            <div class="col-sm-4 invoice-col">
                                Từ
                                <address>
                                    <strong>@Model.NhanVien.Ten</strong><br />
                                    Điện thoại: (804) 123-5432<br />
                                    Email: info@almasaeedstudio.com
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                Tới
                                <address>
                                    <strong>@Model.KhachHang.Ten</strong><br />
                                    Điện thoại: (555) 539-1037<br />
                                    Email: john.doe@example.com
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                <b>Hóa Đơn @Model.HoaDon.MaHoaDon</b><br />
                                <br />
                                <b>Ngày mua:</b> 2/22/2014<br />
                                <b>Tài khoản:</b> @*@Model.KhachHang.TaiKhoan.TaiKhoanDangNhap*@
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <!-- Table row -->
                        <div class="row">
                            <div class="col-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Qty</th>
                                            <th>Mã vé</th>
                                            <th>Chuyến đi</th>
                                            <th>Địa điểm</th>
                                        <th>Thời gian</th>
                                        <th>Giá</th>
                                        <th>Số lượng</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @{ int i = 1;}
                                    @foreach (var ve in @Model.CacVe)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@ve.MaVe</td>
                                            <td>@ve.Tour.MaTour</td>
                                            <td>@ve.Tour.DiaDiemDi.TenDiaDiem - @ve.Tour.DiaDiemDen.TenDiaDiem</td>
                                            <td>@ve.Tour.ThoigianDi</td>
                                            <td>@ve.LoaiVe.GiaTien VNĐ</td>
                                            <td>1</td>
                                            <td>@ve.LoaiVe.GiaTien VNĐ</td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->

                        <div class="row">
                            <!-- accepted payments column -->
                            <div class="col-6">
                                <p class="lead">Phương thức thanh toán:</p>
                                <img src="../../dist/img/credit/visa.png" alt="Visa" />
                                <p class="text-muted well well-sm shadow-none"
                                   style="margin-top: 10px"></p>
                            </div>
                            <!-- /.col -->
                            <div class="col-6">
                                <p class="lead">Đã thanh toán vào 2/22/2014</p>

                                <div class="table-responsive">
                                    <table class="table">
                                        <tr>
                                            <th>Tổng cộng:</th>
                                            <td>@Model.HoaDon.Ves.Sum(ve => ve.LoaiVe.GiaTien)</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <!-- this row will not appear when printing -->
                        <div class="row no-print">
                            <div class="col-12">
                                <a href="invoice-print.html"
                                   rel="noopener"
                                   target="_blank"
                                   class="btn btn-default"><i class="fas fa-print"></i> In</a>
                                <button type="button"
                                        class="btn btn-primary float-right"
                                        style="margin-right: 5px">
                                    <i class="fas fa-download"></i> Tạo PDF
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- /.invoice -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.card -->
    <!-- /.content -->
</div>
