@using BanVeDiTourDuLich.Controllers
@model List<NhanVien>
@{
    ViewBag.Title = "QuanLyNhanVien";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản lý nhân viên</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Quản lý nhân viên</li>
                    </ol>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Nhân viên</h3>
            <div class="card-tools">
                <button type="button"
                        class="btn btn-tool"
                        data-card-widget="collapse"
                        title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button"
                        class="btn btn-tool"
                        data-card-widget="remove"
                        title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">#</th>
                        <th style="width: 20%">Tên Nhân Viên</th>
                        <th style="width: 30%">Lương</th>
                        <th>Ngày vào làm</th>
                        <th style="width: 20%"></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 1;}
                    @foreach (var thongTinNguoiDung in Model.ToList())
                    {
                        <tr>
                            <td>@i</td>
                            <td>
                                <a> @thongTinNguoiDung.Ten </a>
                            </td>
                            <td>
                                <p>@TourController.AddDotAndCommaToInteger(thongTinNguoiDung.Luong) VNĐ</p>
                            </td>
                            <td>
                                <p>@thongTinNguoiDung.NgayVaoLam.ToString("dd.MM.yyyy")</p>
                            </td>
                            <td class="project-actions text-center">
                                <button class="btn-delete">
                                    <a href="/user/InforUser/@thongTinNguoiDung.MaNhanVien" class="btn btn-danger btn-sm btn-max-width js-xoa">
                                        <i class="fas fa-trash"> </i>
                                        chỉnh sửa
                                    </a>
                                </button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <!-- /.content -->
</div>

@section styles
{
    <style>
        .js-xoa {
            width: 100%
        }

        .btn-delete {
            border: none;
            width: 100%;
            background: none;
        }
    </style>
}