
@{
    ViewBag.Title = "QuanLyLichTrinh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1;
}
@using BanVeDiTourDuLich.Models
@model List<LichTrinh>
<style>
    .btn-max-width {
        width: 80%;
    }
</style>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản lý lịch trình</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Admin/ThemLichTrinh">Thêm Lịch trình</a></li>
                        @*<li class="breadcrumb-item active">Quản lý vé</li>*@
                    </ol>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Lịch trình</h3>

            <div class="card-tools">
                <button type="button"
                        class="btn btn-tool"
                        data-card-widget="collapse"
                        title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button"
                        class="btn btn-tool"
                        data-card-widget="remove"
                        title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 10%">Mã lịch trình</th>
                        <th style="width: 10%">Mã Tour</th>
                        <th style="width: 20%">Ảnh</th>
                        <th style="width: 15%">Ngày thứ </th>
                        <th style="width: 20%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lt in Model)
                    {
                        <tr>
                            <td>@lt.MaTinhNang</td>
                            <td>
                                <a> @lt.MaTour </a>
                            </td>
                            <td><img style="width:40% ; height:60px" src="@lt.DuongDanAnh" alt="Placholder Image 2" class="product-frame "></td>          
                            <td>
                                @lt.Ngay
                            </td>                           
                            <td class="project-actions text-center">

                                <button class="btn-delete">
                                    <a href="/Admin/EditLichTrinh/@lt.MaTinhNang" class="btn btn-danger btn-sm btn-max-width js-xoa">
                                        <i class="fas fa-trash"> </i>
                                        Chi tiết
                                    </a>
                                </button>

                                <form action="/Admin/XoaLichTrinh" method="post">
                                    <input name='id' type="hidden" value="@lt.MaTinhNang" />
                                    <button class="btn-delete" type='submit'>
                                        <a class="btn btn-danger btn-sm btn-max-width js-xoa">
                                            <i class="fas fa-trash"> </i>
                                            Xóa
                                        </a>
                                    </button>
                                </form>
                            </td>

                        </tr>
                        i++;
                    }

                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <!-- /.content -->
</div>
@section scripts
{

}

@section styles
{
    <style>
        .js-xoa {
            width: 100%
        }

        .btn-delete {
            border: none;
            width: 100%;
            background: none;
        }
    </style>
}


