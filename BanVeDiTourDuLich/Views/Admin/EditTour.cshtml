
@{
    ViewBag.Title = "EditTour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    @model BanVeDiTourDuLich.ViewModels.ChiTietTourAdmin
}


<link href="~/Content/Admin/css/UploadImg.css" rel="stylesheet" />
