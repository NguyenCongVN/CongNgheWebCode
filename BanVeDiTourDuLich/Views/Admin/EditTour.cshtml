<!-- Page Content -->
<div class="content-wrapper">
    <div class="content-header">
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="h3 mb-2 text-gray-800">
                            Chỉnh sửa Tour
                        </h1>
                        <br />
                    </div>
                    <!-- /.col-lg-12 -->
                    <div class="col-lg-7" style="padding-bottom:120px">
                        <form action="/Admin/EditTour" method="POST" id="Recipe_add">
                            <input name="ID_congthuc" style="width:0.1px;height:0.1px;border-width:0" />
                            <div class="form-group">
                                <label>Mã Tour</label>
                                <input value="@Model.Tour.MaTour" type="text" class="form-control" name="MaTour" placeholder="Mã Tour"></>
                            </div>
                            <div class="form-group">
                                <label>Điểm Đi</label>
                                <input value="@Model.Tour.MaDiemDen" autocomplete="off" type="text" class="form-control" name="MaDiemDen" placeholder=" điểm đi"  />
                            </div>
                            <div class="form-group">
                                <label>Điểm Đến</label>
                                <input value="@Model.Tour.MaDiemDi" autocomplete="off" class="form-control" name="MaDiemDi" placeholder=" điểm đến" />

                            </div>
                            <div class="form-field">
                                <div class="icon">
                                    <span class="ion-ios-calendar"> Thời gian đi</span>
                                </div>
                                <input type="text" name="ThoigianDi" value="@Model.Tour.ThoigianDi"
                                       class="form-control checkin_date"
                                       placeholder="" />
                            </div>
                            <div class="form-group">
                                <label>Thời gian Tour(giờ)</label>
                                <input value="@Model.Tour.SoGio" type="number" class="form-control" name="SoGio" placeholder="số giờ" />
                            </div>
                            <div class="form-group">
                                <label> loại vé</label>
                                <input value="@Model.LoaiVe.Ten" type="text" class="form-control" name="Ten" placeholder="Loại vé" />

                            </div>
                            <div class="form-group">
                                <label>số lượng vé</label>
                                <input value="@Model.LoaiVe.SoLuong" type="number" class="form-control" name="SoLuong" placeholder=" số lượng vé" />
                            </div>
                            <div class="form-group">
                                <label>Giá tiền</label>
                                <input value="@Model.LoaiVe.GiaTien"  class="form-control" name="GiaTien" placeholder=" giá tiền" />
                            </div>
                            <div class="form-group">
                                <label>Mã Loại Vé</label>
                                <input type="text" value="@Model.LoaiVe.MaLoaiVe" class="form-control" name="MaLoaiVe" placeholder="Mã loại vé" />
                            </div>
                            <button type="submit" class="btn btn-default" style="background-color:#4e73df; color: rgba(255,255,255,.8)">Cập nhật</button>
                        </form>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
