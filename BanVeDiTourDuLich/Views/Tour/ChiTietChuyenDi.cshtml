@model BanVeDiTourDuLich.ViewModels.ChiTietViewModel
@{
    ViewBag.Title = "ChiTietChuyenDi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="ftco-section">
    <div class="container">
        <div style="align-items: center;" class="row justify-content-center pb-4 detail-destination">
            <div class="col-md-4 ftco-animate image-box">
                <div class="project-wrap">
                    <a href="#" class="img" style="background-image: url(@Model.ChiTiet.DuongDanAnh);border-radius: 6px;"></a>
                </div>
            </div>
            <div class="motachitiet" style="flex: 0.8; font-weight: 600">
                <div class="sec1">
                    <span class="diadiem">Điểm đến:@Model.ChiTiet.TenDiaDiem</span>
                </div>
                <div class="sec2">
                    <span class="ngaykhoihanh">Khởi hành:@Model.ChiTiet.Tour.ThoigianDi</span>
                    <span class="songay">@Model.ChiTiet.Tour.SoGio</span>
                    <span class="noikhoihanh">HN</span>
                </div>

                <div class="sec4">
                    <ul>
                        <li><span class="flaticon-shower"></span>2</li>
                        <li><span class="flaticon-king-size"></span>3</li>
                        <li><span class="flaticon-mountains"></span>Near Mountain</li>
                    </ul>
                </div>
                <form action="/DatVe/" method="post">
                    <div class="sec3">
                        <div style="margin-bottom: 7px;" itemscope="" itemtype="http://schema.org/PriceSpecification">
                            <p style="margin-right: 50px">Giá Vé :</p>
                            <select name="giave" id="" class="form-control" style="font-size: 15px;margin-bottom: 20px">
                                <option value="">$5,000 (Hạng thường)</option>
                                <option value="">$10,000 (Hạng Thương gia)</option>
                            </select>
                            <div class="quantity">
                                <p style="margin-right: 50px;display: inline;">Số Lượng:</p>
                                <input style="width: 10%; margin-left: 3px; margin-bottom: 10px;display: inline-block" type="number" value="4" min="1" class="quantity-field">
                            </div>
                        </div>
                        <div>
                            <button style="margin-right: 20px;
    margin-left: 0px;" class="btn btn-primary" type="submit">
                                <a href="" class="btn btn-book1 btn-md">
                                    <i class="fas fa-cart-arrow-down"></i>&nbsp;&nbsp;Mua ngay
                                </a>
                            </button>
                            <button style="background: #f3f3f3 !important;" class="btn btn-primary" type="submit">
                                <a href="" class="btn btn-book1 btn-md">
                                    <i class="fas fa-cart-plus"></i>&nbsp;&nbsp;Thêm vào giỏ hàng
                                </a>
                            </button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="chuongtrinhtour mg-bot30" style="display: flex;
    flex-direction: column;
    padding:0 10%;">
    <div class="title-lg">
        <h2>Chương trình tour</h2>
    </div>

</div>

@section styles
{
    <style>
        .detail-destination {
            justify-content: space-around !important;
        }

        .image-box {
            flex: 0 0 50%;
            max-width: 50%;
        }
    </style>

}
