}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center pb-4">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h2 class="mb-4">Điểm Đến Tốt Nhất</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var destination in @Model.CacDiaDiemBinhChon)
            {
                <div class="col-md-3 ftco-animate">
                    <div class="project-destination">
                        <a href="#" class="img" style="background-image: url(@destination.DiaDiem.DuongDanAnh);">
                            <div class="text">
                                <h3>@destination.DiaDiem.TenDiaDiem</h3>
                                <span>@destination.SoChuyen Chuyến đi</span>
                            </div>
                        </a>
                    </div>
                </div>
            }

            
        </div>
    </div>
</section>

