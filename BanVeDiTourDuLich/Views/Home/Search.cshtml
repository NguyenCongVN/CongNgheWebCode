@model BanVeDiTourDuLich.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<section class="ftco-section ftco-no-pt">
    <div class="container">
        <div class="row justify-content-center pb-4">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h2 class="mb-4">kết quả tìm kiếm cho @ViewBag.diemden </h2>
            </div>
        </div>
        <div class="row">
            @foreach (var destination in @Model.CacDiaDiem)
            {
                <div class="col-md-4 ftco-animate">
                    <div class="project-wrap">
                        <a href="#"
                           class="img"
                           style="background-image: url(@destination.DiaDiem.DuongDanAnh)"></a>
                        <div class="text p-4">
                            <span class="price">@destination.GiaTien/người</span>
                            <span class="days">Chuyến đi 1 ngày</span>
                            <h3><a href="#">@destination.DiaDiem.TenDiaDiem</a></h3>
                            <p class="location">
                                <span class="ion-ios-map"></span> @destination.DiaDiem.DiaChi
                            </p>
                            <ul>
                                <li><span class="flaticon-shower"></span>2</li>
                                <li><span class="flaticon-king-size"></span>3</li>
                                <li><span class="flaticon-mountains"></span>Gần núi</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
